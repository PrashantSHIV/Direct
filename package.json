{
  "name": "direct-app",
  "version": "1.0.0",
  "description": "Your Direct Electron App",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"wait-on http://localhost:3000 && npm run electron\"",
    "dev:next": "cd client && npm run dev",
    "electron": "electron .",
    "build": "cd client && npm run build",
    "dist": "npm run build && electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourcompany.direct",
    "productName": "Direct App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "client/.next/**/*",
      "client/public/**/*",
      "client/package.json",
      "client/node_modules/**/*"
    ],
    "win": {
      "target": "dir"
    }
  }
}
